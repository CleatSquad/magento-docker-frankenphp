#!/usr/bin/env bash
# Stop Docker containers
# Usage: bin/stop [profile]
# Default profile: dev

set -e

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
PROJECT_ROOT="$(cd "${SCRIPT_DIR}/.." && pwd)"
cd "${PROJECT_ROOT}"

PROFILE="${1:-dev}"

echo "ðŸ›‘ Stopping Docker containers (profile: ${PROFILE})..."
docker compose --profile "${PROFILE}" stop
echo "âœ… Containers stopped successfully!"
