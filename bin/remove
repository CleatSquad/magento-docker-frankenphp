#!/usr/bin/env bash
# Remove Docker containers
# Usage: bin/remove

set -e

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
PROJECT_ROOT="$(cd "${SCRIPT_DIR}/.." && pwd)"
cd "${PROJECT_ROOT}"

echo "ğŸ—‘ï¸  Removing Docker containers..."
docker compose down "$@"
echo "âœ… Containers removed successfully!"
