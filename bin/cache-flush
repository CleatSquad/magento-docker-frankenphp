#!/usr/bin/env bash
# Flush Magento cache
# Usage: bin/cache-flush

set -e

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
PROJECT_ROOT="$(cd "${SCRIPT_DIR}/.." && pwd)"
cd "${PROJECT_ROOT}"

echo "ðŸ§¹ Flushing Magento cache..."
"${SCRIPT_DIR}/magento" cache:flush "$@"
echo "âœ… Cache flushed successfully!"
