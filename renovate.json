{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "docker-compose"
  ],
  "packageRules": [
    {
      "description": "Disable all dependencies",
      "enabled": false,
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "description": "Enable Traefik updates",
      "matchPackageNames": [
        "traefik"
      ],
      "matchDatasources": [
        "docker"
      ],
      "enabled": true,
      "groupName": "traefik",
      "automerge": false,
      "labels": [
        "dependencies",
        "traefik"
      ]
    }
  ]
}
